{
  "name": "sseidelmann/junit-converter",
  "description": "Converter for several formats to junit",
  "minimum-stability": "stable",
  "license": "MIT",
  "authors": [
    {
      "name": "sebastianseidelmann",
      "email": "sebastian.seidelmann@gmail.com"
    }
  ],
  "require": {
    "symfony/console": "*",
    "ext-dom": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "*",
    "friendsofphp/php-cs-fixer": "^3.87"
  },
  "bin": [
    "bin/junit-converter"
  ],
  "autoload": {
    "psr-4": {
      "\\Sseidelmann\\JunitConverter\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "\\Sseidelmann\\JunitConverterTests\\": "tests/"
    }
  },
  "scripts": {
    "post-install-cmd": [
      "@install-hooks"
    ],
    "post-update-cmd": [
      "@install-hooks"
    ],
    "install-hooks": "cp githooks/pre-commit-template .git/hooks/pre-commit && chmod +x .git/hooks/pre-commit"
  }
}
